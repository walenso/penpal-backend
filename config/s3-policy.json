{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:CreateBucket",
                "s3:DeleteBucket",
                "s3:ListBucket",
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject",
                "s3:GetBucketPolicy",
                "s3:PutBucketPolicy",
                "s3:DeleteBucketPolicy",
                "s3:PutBucketTagging",
                "s3:GetBucketTagging",
                "s3:DeleteBucketTagging"
            ],
            "Resource": [
                "arn:aws:s3:::penpal-*",
                "arn:aws:s3:::penpal-*/*"
            ]
        }
    ]
}